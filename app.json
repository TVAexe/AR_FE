{
  "expo": {
    "name": "AR_FE",
    "slug": "AR_FE",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "arfe",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/adaptive-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.AR-FE",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access for AR features",
        "NSPhotoLibraryUsageDescription": "Ứng dụng cần truy cập ảnh để bạn có thể xem lại ảnh chụp AR.",
        "NSPhotoLibraryAddUsageDescription": "Ứng dụng cần quyền ghi để lưu ảnh chụp màn hình AR vào điện thoại của bạn."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/adaptive-icon.png"
      },
      "package": "com.anonymous.AR_FE",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "output": "static",
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/adaptive-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      "expo-secure-store",
      [
        "expo-media-library",
        {
          "photosPermission": "Cho phép ứng dụng lưu ảnh AR vào thư viện.",
          "savePhotosPermission": "Cho phép ứng dụng lưu ảnh AR vào thư viện."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access camera for AR experience."
        }
      ],
      [
        "@reactvision/react-viro",
        {
          "android": {
            "xRMode": ["GVR", "AR", "OVR_MOBILE"]
          }
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}